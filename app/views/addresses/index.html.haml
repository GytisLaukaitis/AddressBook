%p#notice= notice
%h1.text-center.m-5 Addresses
.col-sm-12.my-auto
  .d-flex.p-2
    %table.table.table-striped.table-bordered.table-hover
      %thead.table-dark
        %tr
          %th Address
          %th Phone
          %th First name
          %th Last name
          %th Email
          %th{:colspan => "3"}
      %tbody
        - @addresses.each do |address|
          %tr
            %td= address.address
            %td= address.phone
            %td= address.first_name
            %td= address.last_name
            %td= address.email
            %td= link_to 'Show', address, class:"btn btn-primary"
            %td= link_to 'Edit', edit_address_path(address), class:"btn btn-secondary"
            %td= link_to 'Destroy', address, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }
    %br/
.text-center
  = link_to 'New Address', new_address_path, class:"btn btn-secondary ml-10"
